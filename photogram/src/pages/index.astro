---
import Layout from '../layouts/Layout.astro'
import Historias from '../components/Historias.astro'
import BarraNav from '../components/BarraNav.astro'
import Publicaciones from '../components/Publicaciones.astro'

import message from '../assets/message.svg'
import heart from '../assets/heart.svg'
---

<Layout title='PhotoGram'>
  <nav class='flex justify-between'>
    <h1 class='text-2xl m-1'>PhotoGram</h1>
    <div class='flex mx-3 gap-2'>
      <a href='/notificaciones' class='mt-1'>
        <img src={heart.src} alt='' class='w-6 cursor-pointer' />
      </a>
      <a href='/mensajes' class='mt-1'>
        <img src={message.src} alt='' class='w-6 cursor-pointer' />
      </a>
    </div>
  </nav>
  <main>
    <Historias />
    <Publicaciones />
    <BarraNav />
  </main>
</Layout>
