---
import Layout from '../layouts/Layout.astro'
import Historias from '../components/Historias.astro'

import message from '../assets/message.svg'
import heart from '../assets/heart.svg'
---

<Layout title='PhotoGram'>
  <nav class='flex justify-between'>
    <h1 class='text-2xl m-1'>PhotoGram</h1>
    <div class='flex mx-3 gap-2'>
      <img src={heart.src} alt='' class='w-8 cursor-pointer' />
      <img src={message.src} alt='' class='w-8 cursor-pointer' />
    </div>
  </nav>
  <Historias />
</Layout>
