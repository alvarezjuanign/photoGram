---
import posts from '../mockups/posts.json'

import heart from '../assets/heart.svg'
import message from '../assets/message.svg'
import send from '../assets/send.svg'
import fav from '../assets/fav.svg'
---

<section>
  <ul>
    {
      posts.map((post) => {
        return (
          <li>
            <img
              src={post.imagen}
              alt='imagen de post'
              class='w-full h-40 object-cover aspect-square'
            />
            <section class='bg-white h-24 flex justify-between mt-2 mx-1'>
              <div>
                <ul class='flex'>
                  <li class='flex mx-1'>
                    <img src={heart.src} alt='' class='h-5' />
                    <p class='text-sm'>727</p>
                  </li>
                  <li class='flex mx-1'>
                    <img src={message.src} alt='' class='h-5 mr-1' />
                    <p class='text-sm'>7</p>
                  </li>
                  <li class='flex mx-1'>
                    <img src={send.src} alt='' class='h-5 mr-1' />
                    <p class='text-sm'>20</p>
                  </li>
                </ul>
              </div>
              <div>
                <img src={fav.src} alt='' class='h-5 mr-1' />
              </div>
            </section>
          </li>
        )
      })
    }
  </ul>
</section>
